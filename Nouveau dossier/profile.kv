<ProfileCard>:
    orientation: "vertical"
    spacing: dp(10)
    size_hint: None, None
    size: dp(300), dp(500)
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    md_bg_color: 0.9, 0.9, 0.9, 1  # Gris clair pour le fond
    radius: [dp(20)]

    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: dp(200)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        ProfileImageCircle:
            source: root.profile_picture
            size_hint: None, None
            size: dp(200), dp(200)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDLabel:
        text: root.full_name
        font_style: "H5"
        halign: "center"
        size_hint_y: None
        height: dp(40)
        bold: True

    MDLabel:
        text: root.bio
        font_style: "Body2"
        halign: "center"
        theme_text_color: "Secondary"
        size_hint_y: None
        height: dp(60)

    MDRaisedButton:
        text: "Modifier le profil"
        pos_hint: {"center_x": 0.5}
        on_release: root.edit_profile_action()